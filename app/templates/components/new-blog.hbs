{{#if addNewBlog}}
<h1>New Post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input class="form-control" value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      {{input class="form-control" value=location id="location"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{textarea rows=6 class="form-control" value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input class="form-control" value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input class="form-control" value=date id="date"}}
    </div>

    <button class="btn btn-primary"{{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
<button class="btn btn-primary" {{action 'blogFormShow'}}>New Post</button>
{{/if}}


{{yield}}
